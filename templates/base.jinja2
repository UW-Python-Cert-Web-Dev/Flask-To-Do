<html>
<head>
<title>My Todo List</title>
</head>
<body>
    <nav>
        <div style="float:left">
            <a href="{{ url_for('all_tasks') }}">All tasks</a>
            <a href="{{ url_for('incomplete_tasks') }}">Do incomplete tasks</a>
            <a href="{{ url_for('create') }}">Create a task</a>
        </div>
        <div style="float:right">
            {% if session.username %}{{ session.username }} (<a href="{{ url_for('logout') }}">logout</a>)
            {% else %}<a href="{{ url_for('login') }}">login</a>
            {% endif %}
        </div>
    </nav>
    <br style="clear:both">
    <h1>My Todo List</h1>
    <h2>{% block subtitle %} {% endblock subtitle %}</h2>
    {% block content %} {% endblock content %}
</body>
</html>